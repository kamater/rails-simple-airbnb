<body>
  <div class="container mt-3">
    <div class="row">
      <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-image"><img src="https://picsum.photos/350/200" alt=""></div>
          <div class="card-body">
            <h3 class="flat-title"><%= flat.name %></h3>
            <p><%= flat.description %></p>
            <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %> <i class="fas fa-euro-sign"> <%= flat.price_per_night %></i></p>
          </div>
          <div class="card-footer">
            <%= link_to 'More info', flat_path(flat), class: 'info-link' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'edit-link' %>
            <a href="" class="remove-link">Remove</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</body>
